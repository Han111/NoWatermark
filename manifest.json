{
  "manifest_version": 3,
  "name": "Jimeng AI Watermark Remover",
  "version": "1.0",
  "description": "Remove watermarks from Jimeng AI generated images",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://jimeng.jianying.com/*",
    "https://*.byteimg.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://jimeng.jianying.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["https://jimeng.jianying.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 